<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:orientation="horizontal">

    <ImageView
            android:id="@+id/donutImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/donut_start" />
    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="132dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

        <TextView
                android:id="@+id/donutNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_marginTop="8dp"/>

        <TextView
                android:id="@+id/donutPriceTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>

        <Spinner
                android:id="@+id/donutQuantitySpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/addDonutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add_to_selected"
                android:layout_marginTop="8dp"/>
    </LinearLayout>

</LinearLayout>